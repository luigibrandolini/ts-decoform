{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",          
    "rootDir": "src",          
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "declaration": true,        // Generate .d.ts files
    "declarationMap": true
  },
  "include": ["src/**/*"]
}